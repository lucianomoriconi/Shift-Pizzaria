<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="botao">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tamanho_texto_botao</item>
        <item name="android:textColor">@color/corDaFontedoBotao</item>
        <item name="android:background">@drawable/botao_personalizado</item>
    </style>
    <style name="Erro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tamanho_texto_botao</item>
        <item name="android:textColor">@color/corMensagemErro</item>
    </style>
</resources>
